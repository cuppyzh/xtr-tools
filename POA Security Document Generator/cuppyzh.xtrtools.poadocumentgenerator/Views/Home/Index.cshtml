                        <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                        Fifth checkbox
                    </li> *@
                </ul>
            </div>

            <div class="nice-form-group">
                <input id="xtrtools-form-filelist-submit" type="submit" value="Generate Document" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>
